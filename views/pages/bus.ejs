<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- css link -->
    <link rel="stylesheet" href="/css/style.css">
      <link rel="stylesheet" href="/css/bus.css">
      <link rel="stylesheet" href="/css/bookinginfo.css">
  <!-- alert -->
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
 
        <!-- fav icon -->
        <link rel="shortcut icon" href="/images/JATAYAT.png" type="image/x-icon">
    <!-- icon link -->
    <link rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <!-- animation link -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <title>About Us / Jataat</title>
</head>
<body>
    <div class="mainticket">
        <header>
            <div class="logo">
              <a href="/"><img src="https://i.ibb.co/30r1rHT/Red-Yellow-Simple-Tour-Bus-Rental-Travel-Logo-1.png" alt="logo">
                <h1>JATAYAT</h1></a>
            </div>
            <nav id="nav">
                <ul>
                    <li><a href="/contact">Contact</a></li>
                </ul>
            </nav>
            <div class="menu"id="menu">
                <i class='bx bx-menu' ></i>
            </div>
        </header>
        <!-- main section -->
        <div class="ticketb-main">
           <div class="ticketleft "style="border:1px solid black">
             <img src="https://i.ibb.co/tCDJ9qr/Seat.png" alt="">
           </div>
           <div class="ticketright">
            <form>
              <div class="formbox">
                <label for="from">From</label>
                <input type="text"placeholder="Enter Your Location"name="from"value="<%=data.from%>"readonly="readonly" style="color:black;font-weight:600">
            </div>
            <div class="formbox">
              <label for="to">To</label>
              <input type="text"placeholder="Enter Your Location"name="to"value="<%=data.to%>"readonly="readonly" style="color:black;font-weight:600">
          </div>
                <div class="formbox">
                    <label for="from">Boarding Point</label>
                    <input type="text"placeholder="Enter Your Location"name="board"value="<%=data.broad%>"readonly="readonly" style="color:black;font-weight:600">
                </div>
                <div class="formbox">
                    <label for="to">Dropping Point</label>
                    <input type="text"placeholder="Enter Your Location"name="drop"value="<%=data.drop%>" style="color:black;font-weight:600"readonly="readonly">
                </div>
                <div class="formbox">
                  <label for="time">Date</label>
                  <input type="date"placeholder="Enter Your Date"name="date"value="<%=data.date%>"style="color:black;font-weight:600" readonly="readonly">
              </div>
              <div class="formbox">
                <label for="id">Bus Name</label>
                <input type="text"name="bus"value="<%=data.bus%>"style="color:black;font-weight:600" readonly="readonly">
            </div>
                <div class="formbox">
                    <label for="time">Departure Time</label>
                    <input type="text"placeholder="Enter Your Time"name="time"value="<%=data.start%>"style="color:black;font-weight:600" readonly="readonly">
                </div>
                <div class="formbox">
                    <label for="Seat">Seat</label>
                    <select name="seat" id="seat"required>
                        <option value="choose"selected disabled>Choose Your Seat</option>
                     <%matchseat.forEach((d)=>{%>
                          <%if(d.seat == "A1"){%>
                            <option disabled style="background-color:red">Booked</option>
                         <%}else{%>
                          <option value="A1">A1</option>
                          <%}%>
                          <%if(d.seat == "A2"){%>
                            <option disabled style="background-color:red">Booked</option>
                         <%}else{%>
                          <option value="A2">A2</option>
                          <%}%>
                          <%if(d.seat == "A3"){%>
                            <option disabled style="background-color:red">Booked</option>
                         <%}else{%>
                          <option value="A3">A3</option>
                          <%}%>
                          <%if(d.seat == "B1"){%>
                            <option disabled style="background-color:red">Booked</option>
                         <%}else{%>
                          <option value="B1">B1</option>
                          <%}%>
                          <%if(d.seat == "B2"){%>
                            <option disabled style="background-color:red">Booked</option>
                         <%}else{%>
                          <option value="B2">B2</option>
                          <%}%>
                          <%if(d.seat == "B3"){%>
                            <option disabled style="background-color:red">Booked</option>
                         <%}else{%>
                          <option value="B3">B3</option>
                          <%}%>
                          <%if(d.seat == "C1"){%>
                            <option disabled style="background-color:red">Booked</option>
                         <%}else{%>
                          <option value="C1">C1</option>
                          <%}%>
                          <%if(d.seat == "C2"){%>
                            <option disabled style="background-color:red">Booked</option>
                         <%}else{%>
                          <option value="C2">C2</option>
                          <%}%>
                          <%if(d.seat == "C3"){%>
                            <option disabled style="background-color:red">Booked</option>
                         <%}else{%>
                          <option value="C3">C3</option>
                          <%}%>
                          <%if(d.seat == "D1"){%>
                            <option disabled style="background-color:red">Booked</option>
                         <%}else{%>
                          <option value="D1">D1</option>
                          <%}%>
                          <%if(d.seat == "D2"){%>
                            <option disabled style="background-color:red">Booked</option>
                         <%}else{%>
                          <option value="D2">D2</option>
                          <%}%>
                          <%if(d.seat == "D3"){%>
                            <option disabled style="background-color:red">Booked</option>
                         <%}else{%>
                          <option value="D3">D3</option>
                          <%}%>
                        <%})%>
                 
                    </select>
                </div>

                <div class="formbox">
                    <label for="name">Passenger Name</label>
                    <input type="text"placeholder="Enter Your Name"name="name"required>
                </div>
                <div class="formbox formboxm">
                    <label for="Phone"id="leftside">Phone No</label>
                    <div class="mainflag">
                        <div class="leftflag">
                            <img src="https://i.ibb.co/q7Twx25/bangladesh.png" alt="flag">
                            <p>+88</p>
                            </div>
                                <input type="number"name="number"id="numbe"placeholder="Enter Your Number"minlength="11"maxlength="11"required>
                    </div>

                </div>
                <div class="formbox">
                    <label for="email">Email</label>
                    <input type="text"placeholder="Enter Your Email"id="eml"name="email"required>
                </div>
              <button onclick="showaler()">Submit</button>
            </form>
           </div>
        </div>
        <div class="bookinginfo"id="printbox">

          <div class="bookinbox">
            <form action="/ticketbook"method="POST">
              <div class="mainhead">
                <h2><%=data.from%> to <%=data.to%></h2>
                <h3><%=data.bus%>,<%=data.type_bus%> Bus</h3>
              </div>


              <div class="bardbox">
                <h2>From</h2>
                <%if(userbroad){%>
                  <input type="text"name="from"value="<%=userbroad%>">
                <%}%>
              </div>
              <div class="bardbox">
                <h2>To</h2>
                <%if(userdrop){%>
                  <input type="text"name="to"value="<%=userdrop%>">
                <%}%>
              </div>

      <div class="bardbox">
        <h2>Boarding Point</h2>
        <%if(userfrom){%>
          <input type="text"name="broad"value="<%=userfrom%>">
        <%}%>
      </div>
      <div class="bardbox">
        <h2>Dropping Point</h2>
        <%if(userto){%>
          <input type="text"name="drop"value="<%=userto%>">
        <%}%>
      </div>
      <div class="bardbox">
        <h2>Date</h2>
        <%if(usedate){%>
         <input type="date"name="date"value="<%=usedate%>">
        <%}%>
      </div>
      <div class="bardbox">
        <h2>Bus Name</h2>
        <%if(userbus){%>
         <input type="text"name="bus"value="<%=userbus%>">
        <%}%>
      </div>
      <div class="bardbox">
        <h2>Name</h2>
        <%if(username){%>
         <input type="text"name="name"value="<%=username%>">
        <%}%>
      </div>
      <div class="bardbox">
        <h2>Mobile Number</h2>
        <%if(usernumber){%>
          <input type="text"name="number"value="<%=usernumber%>">
        <%}%>
      </div>
      <div class="bardbox">
        <h2>Email Address</h2>
        <%if(usereamil){%>
          <input type="text"name="email"value="<%=usereamil%>">
        <%}%>
      </div>
      <div class="bardbox">
        <h2>Seat</h2>
        <%if(userseat){%>
          <input type="text"name="seat"value="<%=userseat%>">
        <%}%>
      </div>
      <div class="paybox">
        <div class="payf">
            <h2>Total Pay </h2>
            <h2><%=data.price%> TK</h2>
        </div>
        <button>Pay</button>
            </form>
        </div>
          </div>
      </div>
      <div class="print-btn"style="width: 100%;padding: 4rem;">
        <button id="btnfi"style="display:block;background-color:#0097e6;border:none;color:white;font-size:1.7rem;cursor:pointer;margin: auto;width: 200px;height:55px;"onclick="printbox()">Print</button>
      </div>
          <!-- javascript -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
      function printbox(){
        var body=document.querySelector("body");
        var printb=document.getElementById("printbox").innerHTML;
        body.innerHTML=printb;
        window.print()
      }
        var nav=document.getElementById("nav");
        var menu=document.getElementById("menu");
       menu.addEventListener("click",function(){
        nav.classList.toggle("activemenu")
       });
       function showaler(){
        var numberda=document.getElementById("numbe");
        var eml=document.getElementById("eml");
       if(numberda.value=="" && eml.value==""){
        swal("error", "Please Fill All Data");
       }else{
        swal("success!", "Please Click The Pay Button For Pay", "success");
       }
       }
       var numbe=document.getElementById("numbe");
    // animation
     AOS.init();
    </script>
</body>
</html>